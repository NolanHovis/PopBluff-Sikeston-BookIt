<h1>Book List</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= link_to "Edit",  edit_book_path(book) %></td>
        <td><%= link_to 'Delete', book_path(book), method: :delete %></td>
        <td><%= link_to 'Show', book_path(book) %></td>
      </tr>
    <% end%>
  </tbody>
</table>
<hr>
<p><%= link_to "Create New Book", new_book_path %></p>